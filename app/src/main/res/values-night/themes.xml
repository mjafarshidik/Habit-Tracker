<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/seashell</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="background" >
        <item name="android:background">@color/black</item>
    </style>
    <style name="textStyle" >
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textStyleBlue" >
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="bgText" >
        <item name="android:backgroundTint">@color/seashell</item>
        <item name="android:textColor">@color/purpleTuple</item>
    </style>
</resources>