<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/seashell</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/seashell</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HabitTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HabitTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HabitTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonPrimaryLarge" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@color/purpleTuple</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="background" >
        <item name="android:background">@color/seashell</item>
    </style>
    <style name="textStyle" >
        <item name="android:textColor">@color/purpleTuple</item>
    </style>

    <style name="textStyleBlue" >
        <item name="android:textColor">@color/egyptianBlue</item>
    </style>
    <style name="bgText" >
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/purpleTuple</item>
    </style>

</resources>